    "ai": "^4.3.15",
    "hono": "^4.7.8",
    "openai": "^4.100.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "redoc-cli": "^0.13.21"
  }
}
